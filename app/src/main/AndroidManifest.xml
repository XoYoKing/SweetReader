<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hm.sweetreader">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".file_manager.FileMangerActivity" />
        <activity android:name=".show.ShowActivity" />
        <activity android:name=".weather.WeatherActivity" />
        <activity android:name=".weather.TemperatureActivity" />
        <activity android:name=".weather.WeatherSuggestActivity" />
        <activity android:name=".music.MusicMainActivity" />

        <service
            android:name=".music.MusicService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".map.MapActivity"></activity>
    </application>

</manifest>