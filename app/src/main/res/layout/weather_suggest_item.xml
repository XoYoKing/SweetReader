<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/weather_suggest_item_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/weather_suggest_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/weather_suggest_item_icon"
        android:text="8946598" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_suggest_item_icon"
        android:layout_below="@+id/weather_suggest_item_name"
        android:id="@+id/weather_suggest_item_value"
        android:text="value"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/weather_suggest_item_icon"
        android:layout_below="@+id/weather_suggest_item_value"
        android:id="@+id/weather_suggest_item_detail"
        android:text="value"
        android:layout_marginTop="5dp"/>


</RelativeLayout>