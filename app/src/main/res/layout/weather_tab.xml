<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/weather_tab_one"
        android:background="?attr/clockBackground">

        <ImageView
            android:id="@+id/weather_tab_icon_one"
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/weather_tab_text_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_tab_icon_one"
            android:layout_centerHorizontal="true"
            android:text="今天" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/weather_tab_two"
        android:background="?attr/clockBackground">

        <ImageView
            android:id="@+id/weather_tab_icon_two"
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/weather_tab_text_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_tab_icon_two"
            android:layout_centerHorizontal="true"
            android:text="明天" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/weather_tab_three"
        android:background="?attr/clockBackground">

        <ImageView
            android:id="@+id/weather_tab_icon_three"
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/weather_tab_text_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_tab_icon_three"
            android:layout_centerHorizontal="true"
            android:text="后天" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/weather_tab_four"
        android:background="?attr/clockBackground">

        <ImageView
            android:id="@+id/weather_tab_icon_four"
            android:layout_width="60sp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/weather_tab_text_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/weather_tab_icon_four"
            android:layout_centerHorizontal="true"
            android:text="后天" />
    </RelativeLayout>


</LinearLayout>